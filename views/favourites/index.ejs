<div class="">
    <div class="container-inner">
        <div class="side-nav">
            <ul class="collection with-header">
                <li class="collection-header">
                    <h4>Saved Recipies</h4>
                </li>
                <% recipes.forEach((element, index) => { %>


                    <li class="collection-item" id="<%- index === 0?" active-fav ": " "%>">
                        <a href="#" onclick="window.location='/favourites/<%= element._id %>/<%= index %>';">
                            <%= element.favourite.label %>
                        </a>
                    </li>

                    <% }) %>
            </ul>
        </div>

        <div class="container favourites">
            <div class="col s12 m12 card inner-card">
                <div class="title-label">
                    <h4>
                        <%= element.favourite.label %>
                    </h4>
                    </br>
                    <div>
                        <h6>Add to food timetable</h6>
                        <input type="text" class="datepicker">
                        <div class="input-field col s6">
                            <select>
                                <option value="" disabled selected>Choose your option</option>
                                <option value="1">Option 1</option>
                                <option value="2">Option 2</option>
                                <option value="3">Option 3</option>
                            </select>
                            <label>Materialize Select</label>
                        </div>
                        <button class="btn waves-effect waves-light grey lighten-5" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>



                <img class=" s12 m12 inner-img" id="activator" src="<%= element.favourite.image %>">
            </div>
            <div class="">



                <div class=" ">

                </div>
                <div class="">

                </div>
                <a class="modal-trigger right-align" id="m<%= activeIndex %>" href="#modal<%= activeIndex %>">View
                    Nutrition</a>
                <div id="modal<%= activeIndex %>" class="modal">
                    <div class="modal-content">
                        <h4>Modal Header</h4>
                        <div class="inner"></div>
                        <div class="inner1"><input type="hidden" value="" /></div>
                        <div class="inner2"><input type="hidden" value="" /></div>
                        <div class="inner3"><input type="hidden" value="" /></div>
                    </div>
                    <div class="modal-footer">
                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
                        <input type="hidden" value="<%= 10 %>" />
                    </div>
                </div>
                <div class="">
                    <h4>Ingredients</h4>
                    <ol>
                        <% element.favourite.ingredientLines.forEach((one, index) => { %>

                            <li>
                                <%= one %>
                            </li>
                            <% }) %>
                    </ol>


                    <a href="#" onclick="window.location='<%= element.favourite.source %>';">Cooking Instructions from
                        <%= element.favourite.source %></a>



                </div>



            </div>


        </div>
    </div>


</div>